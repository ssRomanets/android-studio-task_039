<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SettingsActivity">

    <TextView
        android:id="@+id/captionTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Settings"
        android:textSize="30dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/brightnessBTN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:hint="Настройка яркости"
        android:textSize="30dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/contrastsBTN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:hint="Настройка контрастности"
        android:textSize="30dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/scalingBTN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:hint="Настройка масштабирования"
        android:textSize="30dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/returnBTN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:text="RETURN"
        android:textSize="30dp"
        android:textStyle="bold" />

</LinearLayout>